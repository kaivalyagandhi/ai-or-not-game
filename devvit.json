{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "ai-or-not-v0",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "realtime": true,
  "redis": true,
  "media": {
    "dir": "assets"
  },
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "ai-or-not",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "scheduler": {
    "jobs": [
      {
        "name": "daily-reset-and-post",
        "cron": "0 0 * * *",
        "endpoint": "/internal/scheduler/daily-reset"
      }
    ]
  },
  "dev": {
    "subreddit": "ai_or_not_v0_dev"
  }
}
