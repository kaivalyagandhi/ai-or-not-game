{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "aiornotgame-v1",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "permissions": {
    "realtime": true,
    "redis": true
  },
  "media": {
    "dir": "assets"
  },
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "ai-or-not",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "scheduler": {
    "tasks": {
      "daily-reset-and-post": {
        "endpoint": "/internal/scheduler/daily-reset",
        "cron": "0 12 * * *"
      }
    }
  },
  "dev": {
    "subreddit": "aiornotgame_v1_dev"
  }
}
