{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "spot-the-bot",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    },
    "splash": {
      "title": "Spot the Bot",
      "description": "Test your ability to distinguish AI-generated images from real photos in this daily challenge!",
      "image": "default-splash.png"
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "realtime": true,
  "redis": true,
  "media": {
    "dir": "assets"
  },
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "spot-the-bot",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "scheduler": {
    "jobs": [
      {
        "name": "daily-reset",
        "cron": "0 0 * * *",
        "endpoint": "/internal/scheduler/daily-reset"
      }
    ]
  },
  "dev": {
    "subreddit": "spot_the_bot_dev"
  }
}
